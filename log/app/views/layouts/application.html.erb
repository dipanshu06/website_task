<!DOCTYPE html>
<html>
  <head>
    <title>Log</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
    body
{
  background: #00ff00 url(<%= asset_path 'Surathkal-beach7.jpg' %>) no-repeat fixed center;
  -webkit-background-size: cover;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
        font-family: 'Montserrat', sans-serif;
  color: #fff;
}
*
{
  color: #000;
}
    </style>
  </head>

  <body>
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom affix-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <%= link_to "National Institute Of Technology Karnataka, Surathkal", root_url, class:"navbar-brand"%>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                  <%- if current_user %>
                 <li>
                     <%= link_to "Logout", destroy_user_session_path, method: :delete%>
                 </li>
                 <%else%>
                   <li>
                     <%= link_to "Login",  new_user_session_path %>
                   </li>
                   <li>
                     <%= link_to "Registration", new_user_registration_path %>
                   </li>
                 <%end%>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <center style="padding:10%;">
    <%= yield %>
  </center>
  </body>
</html>
